

</div class = "container">
  <h1 class="text-center">Burgers!</h1>
  <img class="burgerimg center-block" src="http://www.freepngimg.com/download/burger/6-2-burger-png-image.png">
{{!-- <h2>Cats that are not sleepy!</h2> --}}
  <div class = "row">
    <div class = "panel panel-default col-xs-offset-1 col-xs-4">
      <ul class =  "burgerlist">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class = "panel panel-default col-xs-offset-1 col-xs-5">
      <div class = "burgerlist">
        <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>
          <button type="submit">Add Burger</button>
        </form>
      </div>
    </div>
  </div>
</div>